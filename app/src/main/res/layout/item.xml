<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:id="@+id/sched_view"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/color_side"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_starts"
                android:layout_width="107dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="8:00 AM"
                android:textColor="#ffff"
                android:textSize="18dp"
                 />

            <TextView
                android:id="@+id/time_ends"
                android:layout_width="107dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="9:30 AM"
                android:textColor="#ffff"
                android:textSize="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subject_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:text="CpE317"
                android:textColor="#3E4761"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sections"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:text="BSCPE3A"
                android:textColor="#3E4761"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/instructors"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Taga-an, Gieford"
                android:textColor="#3E4761"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>